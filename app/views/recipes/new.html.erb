<h1>Recipe</h1>
<%= form_for( @recipe , remote: true) do |f| %>
  <%=f.label :title%>
  <%=f.text_field :title%><br/>
  <%=f.fields_for :ingredients do |i|%>
    <%=i.label :name,"Ingredient"%>
    <%=i.text_field :name%><br/>
    <%=i.label :quantity%>
    <%=i.text_field :quantity%><br/>
  <%end%>
  <%=f.submit%>
<% end %>