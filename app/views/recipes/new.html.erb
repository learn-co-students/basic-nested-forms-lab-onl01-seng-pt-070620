<h1>Create Recipe</h1>

<%= form_for @recipe  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |ingredient_builder| %><br>
    <%= ingredient_builder.label :name %>
    <%= ingredient_builder.text_field :name %><br>
    
    <%= ingredient_builder.label :quantity %>
    <%= ingredient_builder.text_field :quantity %><br>
  <% end %>
  <%= f.submit %>
<% end %>